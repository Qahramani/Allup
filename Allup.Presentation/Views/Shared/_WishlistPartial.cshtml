@model List<WishlistItemGetViewModel>
<div class="row">
    <div class="col-xl-12">
        <div class="wishlist mt-30">
            <div class="shopping-cart-table table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="image">Image</th>
                            <th class="product">Product</th>
                            <th class="price">Price</th>
                            <th class="delete">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="product-image">
                                        <img src="@item.MainImagePath" alt="cart">
                                    </div>
                                </td>
                                <td>
                                    <div class="product-title">
                                        <h4 class="title"><a href="single-product.html">@item.Name</a></h4>
                                    </div>
                                </td>
                                <td>
                                    <div class="product-price">
                                        <span class="price">€@item.Price</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="product-delete">
                                        <a asp-controller="wishlist" asp-action="ToggleToWishlist" asp-route-productId="@item.Id"><i class="fal fa-trash-alt"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>